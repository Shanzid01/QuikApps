<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Configure" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="19sp" />

            <SeekBar
                android:id="@+id/icon_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="99"
                android:minHeight="2dp"
                android:minWidth="2dp"
                android:paddingLeft="0dp"
                android:progress="64"
                android:progressDrawable="@drawable/seekbar_bg"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Text size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="19sp" />

            <SeekBar
                android:id="@+id/txt_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="20"
                android:minHeight="2dp"
                android:minWidth="2dp"
                android:paddingLeft="0dp"
                android:progress="13"
                android:progressDrawable="@drawable/seekbar_bg"
                android:thumb="@drawable/seekbar_thumb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <CheckBox
                    android:id="@+id/chk_appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show App Names"
                    android:textSize="19sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:background="#cccccc" />

        <LinearLayout
            android:id="@+id/config_Icoparent"
            android:layout_width="70dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/prev_ico"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/chrome_ico" />

            <TextView
                android:id="@+id/prev_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chrome"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFCC66"
        android:gravity="center"
        android:weightSum="10" >

        <Button
            android:id="@+id/config_btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#FFCC66"
            android:onClick="save"
            android:text="Save"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#ff9900" />

        <Button
            android:id="@+id/config_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#FFCC66"
            android:onClick="cancel"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
